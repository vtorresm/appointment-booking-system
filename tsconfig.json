    "target": "ES2020",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "moduleResolution": "node",
    "sourceMap": true
  },
  "include": [
    "src/**/*"
  ],
  "lib": ["esnext", "esnext.disposable", "dom"],
  "exclude": [
    "node_modules"
  ]
}